(defcfg
  process-unmapped-keys yes
)

(defsrc
  esc
  caps h j k l spc
  down up left right
)

(defvar
  tap-time 180
  hold-time 200
)

(defalias
  esc caps
  escctrl (tap-hold $tap-time $hold-time esc (multi lalt lmet))
  spc (tap-hold 200 200 spc (layer-toggle nav))
  ha left
  ja down
  ka up
  la right
)

(deflayer base
  @esc
  @escctrl _ _ _ _ @spc
  _ _ _ _
)

(deflayer nav
  esc
  caps @ha @ja @ka @la _
  _ _ _ _
)
