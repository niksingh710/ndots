{
  "title": "Advanced Fn Vim Mode with Toggle - Fixed",
  "rules": [
    {
      "description": "Map ⌘ + ⌥ + . to Emoji Picker (⌃ + ⌘ + Space), (⌘ + ⌥ ) is capslock hold in my karabiner config",
      "manipulators": [
        {
          "from": {
            "key_code": "period",
            "modifiers": {
              "mandatory": [
                "left_command",
                "left_option"
              ],
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "spacebar",
              "modifiers": [
                "left_control",
                "left_command"
              ]
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Hold Fn: Quick Vim Navigation (ignore other modifiers)",
      "manipulators": [
        {
          "from": {
            "key_code": "h",
            "modifiers": {
              "mandatory": [
                "fn"
              ],
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_arrow"
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "j",
            "modifiers": {
              "mandatory": [
                "fn"
              ],
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "down_arrow"
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "k",
            "modifiers": {
              "mandatory": [
                "fn"
              ],
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "up_arrow"
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "l",
            "modifiers": {
              "mandatory": [
                "fn"
              ],
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "right_arrow"
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "w",
            "modifiers": {
              "mandatory": [
                "fn"
              ],
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "right_arrow",
              "modifiers": [
                "option"
              ]
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "b",
            "modifiers": {
              "mandatory": [
                "fn"
              ],
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_arrow",
              "modifiers": [
                "option"
              ]
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "CapsLock to Escape (tap) and Cmd+Option (hold)",
      "manipulators": [
        {
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "parameters": {
            "basic.to_delayed_action_delay_milliseconds": 180,
            "basic.to_if_alone_timeout_milliseconds": 200
          },
          "to": [
            {
              "key_code": "left_command",
              "modifiers": [
                "left_option"
              ]
            }
          ],
          "to_if_alone": [
            {
              "key_code": "escape"
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Fn+, = keyboard backlight down, Fn+. = keyboard backlight up",
      "manipulators": [
        {
          "from": {
            "key_code": "comma",
            "modifiers": {
              "mandatory": [
                "fn"
              ]
            }
          },
          "to": [
            {
              "key_code": "illumination_decrement"
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "period",
            "modifiers": {
              "mandatory": [
                "fn"
              ]
            }
          },
          "to": [
            {
              "key_code": "illumination_increment"
            }
          ],
          "type": "basic"
        },
        {
          "description": "Press Left Shift ⇧ and Right Shift ⇧ together to toggle Caps Lock",
          "manipulators": [
            {
              "from": {
                "key_code": "right_shift",
                "modifiers": {
                  "mandatory": [
                    "left_shift"
                  ],
                  "optional": [
                    "caps_lock"
                  ]
                }
              },
              "to": [
                {
                  "hold_down_milliseconds": 200,
                  "key_code": "caps_lock"
                },
                {
                  "key_code": "vk_none"
                }
              ],
              "type": "basic"
            },
            {
              "from": {
                "key_code": "left_shift",
                "modifiers": {
                  "mandatory": [
                    "right_shift"
                  ],
                  "optional": [
                    "caps_lock"
                  ]
                }
              },
              "to": [
                {
                  "hold_down_milliseconds": 200,
                  "key_code": "caps_lock"
                },
                {
                  "key_code": "vk_none"
                }
              ],
              "type": "basic"
            }
          ]
        }
      ]
    },
    {
      "description": "Press Left Shift ⇧ and Right Shift ⇧ together to toggle Caps Lock",
      "manipulators": [
        {
          "from": {
            "key_code": "right_shift",
            "modifiers": {
              "mandatory": [
                "left_shift"
              ],
              "optional": [
                "caps_lock"
              ]
            }
          },
          "to": [
            {
              "hold_down_milliseconds": 200,
              "key_code": "caps_lock"
            },
            {
              "key_code": "vk_none"
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "left_shift",
            "modifiers": {
              "mandatory": [
                "right_shift"
              ],
              "optional": [
                "caps_lock"
              ]
            }
          },
          "to": [
            {
              "hold_down_milliseconds": 200,
              "key_code": "caps_lock"
            },
            {
              "key_code": "vk_none"
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
